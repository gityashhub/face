# Backend Environment Variables

# Server Configuration
PORT=3001
NODE_ENV=production

# Database Configuration
MONGO_URI=mongodb+srv://username:password@cluster.mongodb.net/employee_management

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRE=72h

# CORS Configuration
CORS_ORIGIN=http://localhost:5000,https://your-frontend-domain.com

# Email Configuration (if using email features)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# File Upload Configuration
MAX_FILE_SIZE=5242880
UPLOAD_DIR=./uploads

# Face Recognition Configuration (Optional)
FACE_API_ENABLED=true
FACE_API_KEY=your-face-recognition-api-key

# Socket.io Configuration
SOCKET_CORS_ORIGIN=http://localhost:5000,https://your-frontend-domain.com
